<Window x:Class="First_WPF_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:First_WPF_Project"
        mc:Ignorable="d"
        Title="Login Form" FontSize="20" Height="400" Width="450" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel x:Name="main">
            <Label Content="Login" FontSize="32" Foreground="White" HorizontalAlignment="Center"></Label>
            <Separator Height="13" Width="170"/>
            <Label Foreground="White" Margin="30 0">Username:</Label>
            <TextBox x:Name="lUsrn" Background="#545d6a" Margin="30 0"></TextBox>
            <Label Foreground="White" Margin="30 0">Password:</Label>
            <PasswordBox x:Name="lPsw" Background="#545d6a" Margin="30 0"></PasswordBox>
            <Button x:Name="myButton" Content="Submit" Margin="40 50" Background="#545d6a"/>
            <Label FontSize="14" Margin="-40" Width="342" Height="48">Don't have an account? Register now!</Label>
        </StackPanel>
    </Border>
</Window>
