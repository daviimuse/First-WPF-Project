<Window x:Class="First_WPF_Project.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:First_WPF_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450"
       Title="Home" FontFamily="helvetica" FontWeight="Light" FontSize="20" Height="450" Width="370" Background="#34a8eb"
       WindowStyle="None" ResizeMode="NoResize">
    <Border Background="#2e3137" CornerRadius="20" Margin="25">
        <Grid>
            <Button Content="x" x:Name="closeBtn" Click="Close" Foreground="#2e3137" Background="Transparent" BorderBrush="Transparent" Margin="325,-28,-26,403"/>
            <StackPanel x:Name="header" Margin="0,10,0,184">
                <TextBlock Text="Home Page" FontSize="32" Foreground="White" HorizontalAlignment="Center"/>
                <Separator Height="13" Width="170"/>
            </StackPanel>

            <StackPanel x:Name="main" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.RowSpan="2">
                <TextBlock Text="Welcome home!" HorizontalAlignment="Center" Foreground="White"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
